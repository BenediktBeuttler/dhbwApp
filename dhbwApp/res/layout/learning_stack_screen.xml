<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout_learning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StapelScreen" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Hier wird der Stapel angezeigt"
        android:textAppearance="?android:attr/textAppearanceLarge"
         />

    <EditText
        android:id="@+id/learning_card_front"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/notizzettel_front"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="7dp"
        android:maxLines="14"
        android:minLines="1"
        android:paddingLeft="25dp"
        android:paddingTop="20dp"
        android:text="Voderseite"
        android:textSize="15dp"
        android:textStyle="normal"
        android:typeface="normal" />

    <Button
        android:id="@+id/btn_learning_flip"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="btn_learning_flip" />
 
</RelativeLayout>