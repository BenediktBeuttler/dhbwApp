<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4" >

        <Spinner
            android:id="@+id/lbl_statistics_overview_stackSpinner"
            android:layout_width="match_parent"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="0"
            android:layout_rowSpan="2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="Choose Stack:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView1"
            android:layout_column="1"
            android:layout_gravity="left|bottom"
            android:layout_row="2"
            android:text="Total Time:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lbl_statistics_overview_totalDuration"
            android:layout_column="3"
            android:layout_gravity="left|bottom"
            android:layout_row="2"
            android:text="time to be inserted"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView2"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="4"
            android:text="# of Cards:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lbl_statistics_overview_totalNumberOfCards"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="4"
            android:text="number of cards to be inserted"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Space
            android:layout_width="21dp"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_row="0" />

        <Space
            android:layout_width="57dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_row="0" />

        <Space
            android:layout_width="24dp"
            android:layout_height="1dp"
            android:layout_column="2"
            android:layout_row="0" />

        <Space
            android:layout_width="216dp"
            android:layout_height="1dp"
            android:layout_column="3"
            android:layout_row="0" />

        <Space
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_column="0"
            android:layout_row="3" />

        <Space
            android:layout_width="1dp"
            android:layout_height="327dp"
            android:layout_column="0"
            android:layout_row="4" />

        <Space
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_column="0"
            android:layout_row="0" />

        <Space
            android:layout_width="1dp"
            android:layout_height="53dp"
            android:layout_column="0"
            android:layout_row="1" />
    </GridLayout>

</LinearLayout>