<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    style="@style/style_Layout_no_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


            <TextView
        android:id="@+id/txt_edit_card_back"
        android:layout_width="wrap_content"
        android:layout_height="241dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/back"
        android:gravity="left|center_horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="42dp"
        android:scrollbars="vertical"
        android:textColor="#ff000000"
        android:textSize="20sp" />

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="1" >

        <ImageButton
            android:id="@+id/btn_admin_edit_card_back_picture_delete"
            style="@style/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/deletepicture" />

        <ImageButton
            android:id="@+id/btn_edit_picture_back"
            style="@style/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:src="@drawable/mediacenter" />

        <ImageButton
            android:id="@+id/btn_edit_picture_back_show"
            style="@style/imageButton"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:src="@drawable/accept" />

    </GridLayout>

</LinearLayout>