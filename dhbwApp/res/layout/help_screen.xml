<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    style="@style/style_Layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_help_introduction"
                style="@style/style_iconButton2"
                android:layout_weight="1"
                android:drawableTop="@drawable/mediaplayer"
                android:text="@string/btn_help_introduction" />

            <Button
                android:id="@+id/btn_help_learnstatistics"
                style="@style/style_iconButton2"
                android:layout_weight="1"
                android:drawableTop="@drawable/statistics"
                android:text="@string/btn_help_learnstatistics" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_help_editcardsstacks"
                style="@style/style_iconButton2"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/admin"
                android:text="@string/btn_help_editcardsstacks"/>

            <Button
                android:id="@+id/btn_help_settings"
                style="@style/style_iconButton2"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/settings"
                android:text="@string/btn_start_settings" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_help_importexport"
                style="@style/style_iconButton2"
                android:layout_weight="1"
                android:drawableTop="@drawable/impexport"
                android:text="@string/btn_help_importexport" />

            <Button
                android:id="@+id/btn_help_about"
                style="@style/style_iconButton2"
                android:layout_weight="1"
                android:drawableTop="@drawable/lightbulbnew"
                android:text="@string/btn_help_about" />
        </LinearLayout>
    </GridLayout>

</LinearLayout>