<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="-5dp"
    android:layout_marginTop="5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp" >

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3" >

        <Button
            android:id="@+id/btn_help_introduction"
            style="@style/style_iconButton2"
            android:layout_column="0"
            android:layout_row="0"
            android:drawableTop="@drawable/mediaplayer"
            android:text="@string/btn_help_introduction" />
       
        <Button
            android:id="@+id/btn_help_learnstatistics"
            style="@style/style_iconButton2"
            android:layout_column="1"
            android:layout_row="0"
            android:drawableTop="@drawable/statistics"
            android:text="@string/btn_help_learnstatistics" />

        <Button
            android:id="@+id/btn_help_editcardsstacks"
            android:layout_margin="5dp"
            android:textSize="15.5sp"
            android:drawablePadding="3dp"
        	android:padding="10dp"
            android:layout_column="0"
            android:layout_row="1"
            android:drawableTop="@drawable/admin"
            android:text="@string/btn_help_editcardsstacks" />
        
        <Button
            android:id="@+id/btn_help_settings"
            style="@style/style_iconButton2"
            android:layout_column="1"
            android:layout_row="1"
            android:drawableTop="@drawable/settings"
            android:text="@string/btn_start_settings" />
        
        <Button
            android:id="@+id/btn_help_importexport"
            style="@style/style_iconButton2"
            android:layout_column="0"
            android:layout_row="2"
            android:drawableTop="@drawable/impexport"
            android:text="@string/btn_help_importexport" />
        
        <Button
            android:id="@+id/btn_help_about"
            style="@style/style_iconButton2"
            android:layout_column="1"
            android:layout_row="2"
            android:drawableTop="@drawable/about"
            android:text="@string/btn_help_about" />
        
    </GridLayout>

</LinearLayout>