<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/menu_help"
        style="@style/style_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_help" />

    <Button
        android:id="@+id/btn_help_introduction"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/mediaplayer"
        android:layout_height="wrap_content"
        android:text="@string/btn_help_introduction" />

    <Button
        android:id="@+id/btn_help_learnstatistics"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/statistics"
        android:layout_height="wrap_content"
        android:text="@string/btn_help_learnstatistics" />

    <Button
        android:id="@+id/btn_help_editcardsstacks"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/design"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/btn_help_editcardsstacks" />

    <Button
        android:id="@+id/btn_help_settings"
        style="@style/style_button"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/gear"
        android:layout_height="wrap_content"
        android:text="@string/btn_help_settings" />

    <Button
        android:id="@+id/btn_help_importexport"
        style="@style/style_button"
        android:layout_width="match_parent"        
        android:drawableLeft="@drawable/impexport"
        android:layout_height="wrap_content"
        android:text="@string/btn_help_importexport" />

</LinearLayout>