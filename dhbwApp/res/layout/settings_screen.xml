<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    style="@style/style_Layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context=".Settings" >

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2" >

        <Button
            android:id="@+id/btn_reset_database"
            style="@style/style_iconButton2"
            android:layout_column="0"
            android:layout_row="0"
            android:drawableTop="@drawable/xion"
            android:onClick="OnClick"
            android:text="@string/label_settings_resetdatabase" />

        <Button
            android:id="@+id/btn_write_test_data"
            style="@style/style_iconButton2"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_row="0"
            android:drawableTop="@drawable/writing"
            android:text="@string/btn_settings_testdata" />
        
        <Button
            android:id="@+id/btn_settings_reset_statistics"
            style="@style/style_iconButton2"
            android:layout_column="0"
            android:layout_row="1"
            android:drawableTop="@drawable/resetstatistics"
            android:text="@string/btn_settings_reset_statistics" />
        
        <Button
            android:id="@+id/btn_settings_reset_drawer"
            style="@style/style_iconButton2"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_row="1"
            android:drawableTop="@drawable/resetdrawers"
            android:text="@string/btn_settings_reset_drawers" />

    </GridLayout>

</LinearLayout>