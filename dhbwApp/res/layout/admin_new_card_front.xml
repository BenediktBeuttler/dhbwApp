<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    style="@style/style_Layout_no_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/txt_new_card_front"
        style="@style/style_textViewFront"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/front"
        android:ems="10"
        android:inputType="textMultiLine" />
    
    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="1" >

        <ImageButton
            android:id="@+id/btn_admin_new_card_picture_front"
            style="@style/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="0"
            android:src="@drawable/camera" />

        <ImageButton
            android:id="@+id/btn_admin_new_card_picture_front_show"
            style="@style/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_column="2"
            android:layout_row="0"
            android:src="@drawable/accept" />

        <ImageButton
            android:id="@+id/btn_admin_new_card_picture_front_delete"
            style="@style/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/deletepicture" />


    </GridLayout>

</LinearLayout>