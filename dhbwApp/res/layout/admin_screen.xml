<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    style="@style/style_Layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/btn_admin_new_card_new_stack"
        style="@style/style_iconButton2"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableTop="@drawable/plus"
        android:text="@string/btn_admin_newcard" />

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2" >

        <Button
            android:id="@+id/btn_admin_edit_stack"
            style="@style/style_iconButton2"
            android:layout_column="0"
            android:layout_row="0"
            android:drawableTop="@drawable/admin"
            android:text="@string/btn_admin_editstack" />
       
        <Button
            android:id="@+id/btn_admin_import_export"
            style="@style/style_iconButton2"
            android:layout_column="1"
            android:layout_row="0"
            android:drawableTop="@drawable/impexport"
            android:text="@string/btn_admin_importexport" />

        <Button
            android:id="@+id/btn_admin_new_dyn_stack"
            style="@style/style_iconButton2"
            android:layout_column="0"
            android:layout_row="1"
            android:drawableTop="@drawable/dynamicstack_big"
            android:text="@string/btn_admin_newdynstack" />
        
        <Button
            android:id="@+id/btn_admin_update_dyn_stack"
            style="@style/style_iconButton2"
            android:layout_column="1"
            android:layout_row="1"
            android:drawableTop="@drawable/refreshnew"
            android:text="@string/btn_admin_update_dynstack" />
        
    </GridLayout>

</LinearLayout>