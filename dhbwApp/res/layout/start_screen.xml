<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10sp"
    android:orientation="horizontal">
    
    <TextView
        android:id="@+id/lbl_app_name_start_screen"
        android:layout_marginTop="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_launcher"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <Space
        android:id="@+id/Space2"
        android:layout_width="10dp"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Space1" />

    <Space
        android:id="@+id/Space1"
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_start_admin" />

    <Space
        android:id="@+id/Space3"
        android:layout_width="5dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/Space1"
        android:layout_toRightOf="@+id/btn_start_admin" />

    <Space
        android:id="@+id/Space4"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/Space1"
        android:layout_toRightOf="@+id/btn_start_statistic" />

    <Button
        android:id="@+id/btn_start_admin"
        android:layout_marginTop="70sp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Space2"
        android:layout_alignRight="@+id/btn_start_settings"
        android:layout_below="@+id/Space2"
        android:drawablePadding="3sp"
        android:drawableTop="@drawable/admin"
        android:padding="12sp"
        android:text="@string/btn_start_admin"
        android:textColor="#FFFFFF"
        android:textSize="15.5sp" />

    <Button
        android:id="@+id/btn_start_settings"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Space2"
        android:layout_below="@+id/Space1"
        android:drawablePadding="3sp"
        android:drawableTop="@drawable/settings"
        android:padding="12sp"
        android:text="@string/btn_start_settings"
        android:textColor="#FFFFFF"
        android:textSize="15.5sp" />

    <Button
        android:id="@+id/btn_start_statistic"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_start_admin"
        android:layout_toRightOf="@+id/Space3"
        android:drawablePadding="3sp"
        android:drawableTop="@drawable/statistics"
        android:padding="12sp"
        android:text="@string/btn_start_statistic"
        android:textColor="#FFFFFF"
        android:textSize="15.5sp" />

    <Button
        android:id="@+id/btn_start_help"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_start_statistic"
        android:layout_alignTop="@+id/btn_start_settings"
        android:drawablePadding="3sp"
        android:drawableTop="@drawable/help"
        android:padding="12.5sp"
        android:text="@string/btn_start_help"
        android:textColor="#FFFFFF"
        android:textSize="15.5sp" />

    <Button
        android:id="@+id/btn_start_learning"
        android:layout_marginTop="85sp"
        android:layout_width="wrap_content"
        android:layout_height="90sp"
        android:layout_alignLeft="@+id/Space2"
        android:layout_alignRight="@+id/btn_start_statistic"
        android:drawablePadding="3sp"
        android:drawableTop="@drawable/learning"
        android:padding="8sp"
        android:text="@string/btn_start_learning"
        android:textColor="#FFFFFF"
        android:textSize="15.5sp" />

    

</RelativeLayout>