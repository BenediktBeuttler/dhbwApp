<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".StartScreen" >

    <TextView
            android:id="@+id/lbl_app_name_start_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_launcher"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp" />

    <Button
        android:id="@+id/btn_start_learning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/contact"
        android:gravity="left|center_vertical"
        android:onClick="start_onButtonClick"
        android:text="@string/btn_start_learning" />

    <Button
        android:id="@+id/btn_start_admin"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/design"
        android:layout_height="wrap_content"
        android:onClick="start_onButtonClick"
        android:text="@string/btn_start_admin" />

    <Button
        android:id="@+id/btn_start_statistic"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/statistics"
        android:layout_height="wrap_content"
        android:onClick="start_onButtonClick"
        android:text="@string/btn_start_statistic" />

    <Button
        android:id="@+id/btn_start_settings"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/gear"
        android:layout_height="wrap_content"
        android:onClick="start_onButtonClick"
        android:text="Settings" />

    <Button
        android:id="@+id/btn_start_help"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/lightbulb"
        android:layout_height="wrap_content"
        android:onClick="start_onButtonClick"
        android:text="Help" />

</LinearLayout>