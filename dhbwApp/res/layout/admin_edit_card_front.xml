<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    style="@style/style_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/txt_edit_card_front"
        style="@style/style_textViewFront"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:ems="10"
        android:inputType="textMultiLine" >
    </EditText>
    
    
        <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2" >
        
        <Space
            android:layout_width="100dp"
            android:layout_height="6dp"
            android:layout_row="0" />

        <Button
            android:id="@+id/btn_edit_picture_front"
            style="@style/style_iconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:drawableLeft="@drawable/camera" />

        <Button
            android:id="@+id/btn_admin_edit_card_front_picture_delete"
            style="@style/style_iconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:drawableLeft="@drawable/deletepicture" />
        
        <ImageButton
        android:id="@+id/btn_edit_picture_front_show"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_column="2"
        android:layout_row="1"
        android:src="@drawable/accept" />

        
    </GridLayout>

    

</LinearLayout>