<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="style_button">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="style_label" parent="android:Widget.Holo.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="style_header" parent="android:Widget.Holo.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="style_textView" parent="android:Widget.Holo.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">left</item> 
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>    </style>

    <style name="style_iconButton" parent="android:Widget.Holo.Button">
        <item name="android:drawableLeft">@drawable/contact</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    
    <style name="style_iconButton2" parent="android:Widget.Holo.Button">
        <item name="android:drawablePadding">3dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15.5sp</item>
        <item name="android:layout_width">141dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_listView" parent="android:Widget.Holo.ListView">
        <item name="android:dividerHeight">2dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="style_textViewFront" parent="android:Widget.Holo.TextView">
        <item name="android:background">@drawable/front</item>
        <item name="android:gravity">left|center_horizontal</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">42dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_textViewBack" parent="android:Widget.Holo.TextView">
        <item name="android:background">@drawable/back</item>
        <item name="android:gravity">left|center_horizontal</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">42dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_Layout">
        <item name="android:background">@drawable/background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="style_Layout_no_back">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="imageButton" parent="android:Widget.Holo.ImageButton">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">17dp</item>
    </style>
</resources>