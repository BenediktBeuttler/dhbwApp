<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="style_button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="style_label" parent="android:Widget.Holo.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="style_header" parent="android:Widget.Holo.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>  
        <item name="android:paddingLeft">2dp</item>     
    </style>
    
       <style name="style_textView" parent="android:Widget.Holo.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>  
        <item name="android:paddingLeft">2dp</item> 
    </style>
    
       <style name="style_iconButton" parent="android:Widget.Holo.Button">
              <item name="android:drawableLeft">@drawable/contact</item>
              <item name="android:drawablePadding">12dp</item>
              <item name="android:gravity">left|center_vertical</item>
              <item name="android:paddingBottom">12dp</item>
              <item name="android:paddingLeft">24dp</item>
              <item name="android:paddingTop">12dp</item>
              <item name="android:textSize">24sp</item>
              <item name="android:layout_marginBottom">6dp</item>
        	  <item name="android:layout_marginTop">6dp</item>
       </style>
</resources>